{
  "name": "transporte-app",
  "version": "1.0.0",
  "description": "Sistema integral de transporte de pasajeros, mensajería y paquetería",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:setup": "node scripts/setup-database.js",
    "db:schema": "psql -U postgres -d transporte_db -f database/schema.sql",
    "db:seed": "psql -U postgres -d transporte_db -f database/seed.sql",
    "db:reset": "psql -U postgres -c 'DROP DATABASE IF EXISTS transporte_db' && npm run db:setup",
    "db:console": "psql -U postgres -d transporte_db",
    "test": "node tests/run-all.js",
    "test:controllers": "node tests/controllers/run-controllers-tests.js"
  },
  "keywords": [
    "transporte",
    "pasajeros",
    "mensajeria",
    "paqueteria",
    "logistica"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mysql2": "^3.15.3",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
